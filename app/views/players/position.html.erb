<%= render 'welcome/menu' %>
<%= render 'player_menu' %>
<%= render 'player_positions' %>



<table id="tblMain" class="table1">
  <thead>
    <tr>
    <th></th>
      <th>Name</th>
      <th>Team</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
       <tr>
       
	  
          <td><%= player.name %> <%= player.surname %></td>
	      <td><%= player.try(:team).try(:name) %> </td> 
  	    
		  <% if player.try(:team).try(:logo_file_name) == nil %>
	  	    <td></td>
	  	    <% else %>
		   <td><%= image_tag player.try(:team).try(:logo).try(:url, :medium) %> </td>
	      <% end %>
		  </tr>
		  
	  	<script type="text/javascript">
	  		   rows()
	  	</script>
	  
    <% end %>
  </tbody>
</table>
